#include <stdio.h>
#include <stdbool.h>

char username[15];
char choice;

int main(){
    
    printf("Chapter One\n");
    printf("The forest\n");
    printf("Enter your name(Up to 15 characters\n");
    scanf(" %s",username);
    printf("You entered a forest\n");
    printf("You go inside\n");
    printf("You notice a sharp branch on the ground\n");
    while(1){
    printf("pick it up [a]\n");
    printf("leave it [b]\n");
    scanf(" %c",&choice);
    if(!the_stick(choice))
        continue;
    break;
    }
    printf("You encounter an angry goblin\n");
    return 0;
}
void the_stick(char input){
// printf("You notice a sharp branch on the ground\n");
// printf("pick it up [a]\n");
// printf("leave it [b]\n");
// scanf(" %c",&input);
switch (input)
{
case 'a':if (input==choice){
    printf("you acquired a stick\n");
    printf("you left\n");
    }
    break;
case 'b':if(input==choice)
    printf("you left\n");
    break;
default:
    printf("you chose wrong input!\n");
    }
}
